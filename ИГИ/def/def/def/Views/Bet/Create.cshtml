@using def.Models
@model BetForCreate

@{
    Layout = "_Layout";
}

<section class="vh-100" xmlns="http://www.w3.org/1999/html">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">


                <div class="d-flex align-items-end h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    <form form asp-action="Create" asp-controller="Bet" method="post" class="form-register">
                        <div asp-validation-summary="ModelOnly"></div>


                        <div class="form-group">
                            <label asp-for="Name"></label><br />
                            <input asp-for="Name" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Command"></label>
                            <input type="radio" value="@ViewBag.CommandOne" asp-for="Command" />
                            <span>@ViewBag.CommandOne</span><br />
                            <input type="radio" value="@ViewBag.CommandTwo" asp-for="Command" />
                            <span>@ViewBag.CommandTwo</span><br />
                        </div>
                        <div class="form-group">
                            <label asp-for="Pay"></label><br />
                            <input asp-for="Pay" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-primary" style="padding: 10px">Сохранить</button>
                        <button class="btn-dark" asp-action="Index" asp-controller="Bet">Вернутся</button>
                    </form>
                </div>
            </div>
            
        </div>
    </div>
</section>