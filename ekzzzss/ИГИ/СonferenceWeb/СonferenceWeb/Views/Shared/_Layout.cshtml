<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - СonferenceWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">СonferenceWeb</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="container card-body-content">
                    <div align="right">
                        <form method="get" asp-controller="Home" asp-action="Index">
                            <input style="width:200px;" type="submit" value="HomePage" />
                        </form>

                        <form method="get" asp-controller="Home" asp-action="Members">
                            <input style="width:200px;" type="submit" value="Список участников" />
                        </form>
                    </div>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <p>@User.Identity.Name</p>

                        <form method="post" asp-controller="Account" asp-action="Logout" asp-route-area="">
                            <input style="width:200px;" type="submit" value="Выйти" />
                        </form>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Login">Вход </a>
                        <a asp-controller="Account" asp-action="Register">Регистрация </a>
                    }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - СonferenceWeb - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
